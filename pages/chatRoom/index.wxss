.messageBar {
    position: fixed;
    bottom: 35rpx;
    width: 100%;
    height: 50rpx;
    display: inline-flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
}

.messageBar > input {
    background-color: #F9F9F9;
    border-radius: 5px;
    margin-left: 20rpx;
    padding-left: 15rpx;
    padding-right: 15rpx; 
    font-size: 0.75rem;
    min-width: 14rem;
}

.messageBar > button {
    margin-left: 20rpx;
    margin-right: 10rpx;
}
@import './templates/selfMessages/message.wxss';
@import './templates/otherMessages/message.wxss';
.container {
    padding: 0;
    justify-content: flex-start;
}

.header {
    background: rgb(67, 156, 245);
    padding-top: 10px;
    padding-bottom: 5px;
    width: 100%;
    min-height: 5%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.title {
    color: #ffffff;
}

.left-icon {
    padding-left: 30rpx;
}

.right-icon {
    padding-right: 30rpx;
}

.chatHistory {
    padding: 15rpx;
    background-color: rgb(250, 248, 253);
    height: 85%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.message {
    padding: 0 20rpx;
    display: flex;
    flex-direction: row;
}

.chatAvatar {
    border-radius: 50%;
    width: 100rpx;
    height: 100rpx;
    min-width: 100rpx;
}

.chatText {
    align-self: center;
    margin-right: 20rpx; 
    margin-left: 20rpx;
    word-break: break-all;
}

.messageBar {
    position: relative;
    background-color: rgb(240, 241, 246);
    min-height: 10%;
    width: 100%;
}

.messageBar > input {
    float: left;
    position: absolute;
    height: 3em;
    min-height: 3em;
    line-height: 3em;
    font-size: 0.8rem;
    background-color: rgb(254, 254, 254);
    border-radius: 3px;
    top: 15rpx;
    left: 15rpx;
    right: 80px;
    padding-left: 15rpx;
    padding-right: 15rpx;
    min-width: 14rem;
}

.send {
    float: right;
    position: absolute;
    right: 15rpx;
    top: 15rpx;
    width: 75rpx;
    box-sizing: inherit;
    height: 3em;
    min-height: 3em;
    line-height: 3em;
    font-size: 0.8rem;
}
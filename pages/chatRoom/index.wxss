@import './templates/selfMessages/message.wxss';
@import './templates/otherMessages/message.wxss';
.container {
    padding: 0;
    justify-content: flex-start;
}

.header {
    background: rgb(67, 156, 245);
    padding-top: 10px;
    padding-bottom: 5px;
    width: 100%;
    min-height: 5%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.title {
    color: #ffffff;
}

.left-icon {
    padding-left: 30rpx;
}

.right-icon {
    padding-right: 30rpx;
}

.chatHistory {
    height: 80%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.message {
    width: 100%;
    display: flex;
    flex-direction: row;
}

.chatAvatar {
    border-radius: 50%;
    width: 100rpx;
    height: 100rpx;
}

.chatText {
    align-self: center;
    margin-right: 20rpx;
    margin-left: 20rpx;
}

.messageBar {
    min-height: 5%;
    position: fixed;
    bottom: 35rpx;
    width: 100%;
    height: 50rpx;
    display: inline-flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
}

.messageBar > input {
    background-color: #F9F9F9;
    border-radius: 5px;
    margin-left: 20rpx;
    padding-left: 15rpx;
    padding-right: 15rpx;
    font-size: 0.75rem;
    min-width: 14rem;
}

.messageBar > button {
    height: inherit;
    margin-left: 20rpx;
    margin-right: 10rpx;
}